<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/Color logo - no background.svg</argument>
                <argument name="logo_height" xsi:type="string">56</argument>
                <argument name="logo_width" xsi:type="string">200</argument>
            </arguments>
        </referenceBlock>
        
        <referenceContainer name="footer-container">
            <block class="Magento\Cms\Block\Block" name="footer-social-media"> 
                <arguments> 
                    <argument name="block_id" xsi:type="string">footer-social-media</argument> 
                </arguments> 
            </block> 
        </referenceContainer>
        
    </body>
</page>